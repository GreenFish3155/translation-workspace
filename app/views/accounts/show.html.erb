<h1>Your Account</h1>
<div class="container">
    <div class="accountinfo">
        <h2>Username:
        <%= @account.username %></h2>
        <h2>First Name:
        <%= @account.first_name %>
        </h2>
        <h2>Last Name:
        <%= @account.last_name %></h2>
    </div>
    <div class="editAccount">
    <%= link_to edit_account_path do %>
        Edit Profile
    <% end %>
    
    <%= link_to 'Delete',
        account_path(@account),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
    
    <%= link_to account_translations_path(@account.id) do %>
        Back
    <% end %>
    </div>
</div>