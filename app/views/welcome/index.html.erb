<h1 id="main">Welcome to Translation Workspace</h1>
<div class="layout">
    <div class="login">
        <% if !@error.nil? %>
            <%= @error.inspect %>
        <% end %>
        <%= form_tag :action=>'login', :controller=>'accounts' do %>
            <h2>Login</h2>
            <%= text_field_tag "username" %>
            <h2>Password</h2>
            <%= password_field_tag "field2" %>
            <%= submit_tag "Login" %>
        <% end %>
    </div>
    <%= link_to new_account_path, id:"signup" do %>
        <div class="signup">
            <h3>Sign Up</h3>
            <p>This workspace creates a complete storge for your translations and stores them into
             a convienent database for you to view at anytime. Create an account to get started!</p>
        </div>
    <% end %>
</div>
